<%- include('layouts/header.ejs') %>
<div class="container p-5">
  <div class="row m-5">
    <div class="col-md-12">
      <form
        action="/update_slider/<%=slider[0].slider_id%>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-dark text-center">Update Slider</h1>
            <br />
          </div>
          <div class="col-md-4">
            Slider Title
            <input
              type="text"
              hidden
              name="slider_image"
              value="<%=slider[0].slider_image%>"
            />
            <input
              value="<%= slider[0].slider_title%>"
              required
              class="form-control bg-white"
              type="text"
              name="slider_title"
            />
          </div>
          <div class="col-md-4">
            Type
            <input
              value="<%= slider[0].type %>"
              required
              class="form-control bg-white"
              type="text"
              name="type"
            />
          </div>
          <div class="col-md-4">
            Select Image
            <input
              required
              class="form-control bg-white"
              type="file"
              name="slider_image"
            />
          </div>
          <div class="col-md-12">
            Description
            <textarea
              required
              class="form-control bg-white"
              name="slider_description"
            >
<%= slider[0].slider_description%></textarea
            >
          </div>
          <div class="col-md-12 d-flex">
            <button class="btn mx-auto my-3 text-white btn-info">Submit</button>
          </div>
          <div class="col-md-12 d-flex my-5">
            <img
              src="/uploads/<%=slider[0].slider_image%>"
              width="400vw"
              class="mx-auto"
              alt="Not Found"
            />
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('layouts/footer.ejs') %>
