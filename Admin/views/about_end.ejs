<%- include('layouts/header.ejs')%>

<form action="/save_about_end" method="post" enctype="multipart/form-data" class="p-5">
    <div class="container bg-white text-dark">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="mt-5 text-dark">Add New Image</h1>
            </div>
            <div class="col-12">
                Image:
                <input type="file" name="img" class="form-control">
            </div>
           <div class="col-12 text-center mt-5">
               <button class="btn btn-info btn-lg text-white">Save</button>
            </div>
           
        </div>
    </div>
</form>


<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <table class="table table-sm text-center">
                <tr>
                <th class="pt-4 pb-3 ps-3">ACTION</th>
                <th class="pt-4 pb-3 ps-3">SR.NO</th>
                <th class="pt-4 pb-3 ps-3">IMAGE</th>
                </tr>

                <% for (var i=0;i<img.length;i++) { %>
                    <tr>
                        <td>
                           <a href="/edit_img/<%=img[i].company_id%>"><button class="btn btn-primary"><i class="fa fa-pen"></i></button></a>
                           <a href="/delete_img/<%=img[i].company_id%>"><button class="btn btn-danger"><i class="fa fa-trash"></i></button></a>
                        </td>
                        <td><%=i+1%></td>
                        
                        <td><%=img[i].img%></td>
                       

                    </tr>

                    <% } %>
            </table>
        </div>
    </div>
</div>
<%- include('layouts/footer.ejs')%>

